# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mutual_fund_db
DB_USER=postgres
DB_PASSWORD=your_password
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/mutual_fund_db

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_secret_key
JWT_REFRESH_EXPIRES_IN=30d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=mutual-fund-bucket

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@mutualfund.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# Third Party APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
NSE_API_KEY=your_nse_api_key

# File Upload
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Background Images URLs
HOME_BG_IMAGE=https://images.unsplash.com/photo-1611974789855-9c2a0a7236a3?w=1920
LOGIN_BG_IMAGE=https://images.unsplash.com/photo-1559526324-4b87b5e36e44?w=1920
ADMIN_BG_IMAGE=https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=1920
DASHBOARD_BG_IMAGE=https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=1920

# App Configuration
APP_NAME=Mutual Fund Platform
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100