// International funds image
const internationalCanvas = createCanvas(300, 200);
const intlCtx = internationalCanvas.getContext('2d');

const intlGradient = intlCtx.createLinearGradient(0, 0, 300, 200);
intlGradient.addColorStop(0, '#1D4ED8');
intlGradient.addColorStop(1, '#60A5FA');
intlCtx.fillStyle = intlGradient;
intlCtx.fillRect(0, 0, 300, 200);

// World map outline
intlCtx.strokeStyle = 'white';
intlCtx.lineWidth = 2;

// Simple world continents
const continents = [
  [50, 80, 100, 60],   // Asia
  [160, 80, 80, 40],   // Europe
  [200, 120, 60, 50],  // Africa
  [50, 140, 90, 40],   // Australia
  [150, 140, 100, 50]  // Americas
];

continents.forEach(([x, y, w, h]) => {
  intlCtx.strokeRect(x, y, w, h);
  intlCtx.fillStyle = 'rgba(255, 255, 255, 0.2)';
  intlCtx.fillRect(x, y, w, h);
});

intlCtx.fillStyle = 'white';
intlCtx.font = 'bold 24px Inter';
intlCtx.textAlign = 'center';
intlCtx.fillText('INTERNATIONAL', 150, 50);
intlCtx.font = '16px Inter';
intlCtx.fillText('Global Market Exposure', 150, 180);