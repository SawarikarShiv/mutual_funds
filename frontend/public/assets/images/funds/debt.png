// Debt funds image
const debtCanvas = createCanvas(300, 200);
const debtCtx = debtCanvas.getContext('2d');

const debtGradient = debtCtx.createLinearGradient(0, 0, 300, 200);
debtGradient.addColorStop(0, '#059669');
debtGradient.addColorStop(1, '#10B981');
debtCtx.fillStyle = debtGradient;
debtCtx.fillRect(0, 0, 300, 200);

// Add stable trend chart
debtCtx.strokeStyle = 'white';
debtCtx.lineWidth = 3;
debtCtx.beginPath();
debtCtx.moveTo(50, 120);
debtCtx.lineTo(100, 110);
debtCtx.lineTo(150, 115);
debtCtx.lineTo(200, 112);
debtCtx.lineTo(250, 118);
debtCtx.stroke();

debtCtx.fillStyle = 'white';
debtCtx.font = 'bold 24px Inter';
debtCtx.textAlign = 'center';
debtCtx.fillText('DEBT', 150, 50);
debtCtx.font = '16px Inter';
debtCtx.fillText('Low Risk, Stable Returns', 150, 180);