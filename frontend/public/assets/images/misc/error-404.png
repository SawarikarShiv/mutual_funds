// 404 error image
const errorCanvas = createCanvas(400, 300);
const errorCtx = errorCanvas.getContext('2d');

const errorGradient = errorCtx.createLinearGradient(0, 0, 400, 300);
errorGradient.addColorStop(0, '#DC2626');
errorGradient.addColorStop(1, '#EF4444');
errorCtx.fillStyle = errorGradient;
errorCtx.fillRect(0, 0, 400, 300);

errorCtx.fillStyle = 'white';
errorCtx.font = 'bold 80px Inter';
errorCtx.textAlign = 'center';
errorCtx.fillText('404', 200, 120);

errorCtx.font = 'bold 24px Inter';
errorCtx.fillText('Page Not Found', 200, 180);

errorCtx.font = '16px Inter';
errorCtx.fillText('The requested page could not be found', 200, 220);