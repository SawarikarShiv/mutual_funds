// Profile background
const profileCanvas = createCanvas(800, 400);
const profileCtx = profileCanvas.getContext('2d');

const profileGradient = profileCtx.createLinearGradient(0, 0, 800, 400);
profileGradient.addColorStop(0, '#1E40AF');
profileGradient.addColorStop(1, '#3B82F6');
profileCtx.fillStyle = profileGradient;
profileCtx.fillRect(0, 0, 800, 400);

// Add pattern of financial symbols
profileCtx.fillStyle = 'rgba(255, 255, 255, 0.1)';
profileCtx.font = '40px Arial';

const symbols = ['ðŸ’°', 'ðŸ“ˆ', 'ðŸ¦', 'ðŸ’¹', 'ðŸ“Š', 'ðŸ’³'];
symbols.forEach((symbol, i) => {
  const x = 100 + (i % 3) * 200;
  const y = 100 + Math.floor(i / 3) * 150;
  profileCtx.fillText(symbol, x, y);
});

// Add user profile silhouette
profileCtx.fillStyle = 'rgba(255, 255, 255, 0.2)';
profileCtx.beginPath();
profileCtx.arc(650, 200, 80, 0, Math.PI * 2);
profileCtx.fill();